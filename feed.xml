---
layout: null
permalink: /feed.xml
---

<rss version="2.0">
<channel>
  <title>Raphael Amorim</title>
  <description>{{ site.description | xml_escape }}</description>
  <link>{{ page.url | prepend: site.baseurl | prepend: site.url }}</link>
  {% for post in site.posts %}
    <item xml:lang="en-us">
      <title>{{ post.title | smartify | strip_html | replace: '\n', ' ' | strip | xml_escape }}</title>
      <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
      <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
      <description>{{ post.description | strip | xml_escape }}</description>
      <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
    </item>
  {% endfor %}
</channel>
</rss>